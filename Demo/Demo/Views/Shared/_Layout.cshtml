<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <style>
        #nav_menu{
            position:fixed;
            background-color:#ffffff;
            border:1px solid #ffffff;
            height:150px;
            width:100%;
            margin-top:-50px;
            text-align:center;
            font-size:20px;
        }
        #logo_sb{
            margin-top: 30px;
            margin-bottom:20px;
        }
        #logo_sb a{
            text-decoration:none;
            font-size:14px;
            float:right;
            margin-right:80px;
        }
        #img_logo {
            margin-right:-120px;
        }
        #link a {
            text-decoration:none;
            color:#373333;
            margin-right:30px;
            padding-left: 10px;
        }
        #link a:hover{
            color:#439c14;
        }
    </style>
    <script>
        $( document ).on( "mousemove", function( event ) {
            if (event.pageY >= 400) {
                document.getElementById("img_logo").style.width = '160px';
                document.getElementById("img_logo").style.height = '40px';
                document.getElementById("nav_menu").style.height = '100px';
                document.getElementById("logo_sb").style.marginTop = '10px';
                document.getElementById("logo_sb").style.marginBottom = '10px';
                document.getElementById("nav_menu").style.borderBottom = "1px solid #f1f1f1";
            }
            else if(event.pageY < 500){
                document.getElementById("img_logo").style.width = '320px';
                document.getElementById("img_logo").style.height = '80px';
                document.getElementById("nav_menu").style.height = '170px';
                document.getElementById("logo_sb").style.marginTop = '30px';
                document.getElementById("logo_sb").style.marginBottom = '20px';
                document.getElementById("nav_menu").style.borderBottom = "0px";
            }
        });
    </script>
</head>
<body>
    <div id="nav_menu">
        <div id="logo_sb">
            <img src="~/Images/sb-logo2.png" height="80" width="320" id="img_logo" />
            <a href="/Admin/LoginAdmin"><img src="~/Images/login.png" height="30" width="30" /> LOGIN</a>
        </div>
        <div id="link">
            <a href="/Home/Index" alt=""><strong>HOME</strong></a>
            <a href="/Partners/Index" alt=""><strong>PARTNER</strong></a>
            <a href="/news/Index" alt=""><strong>NEWS</strong></a>
        </div>
    </div>
    
    <div class="container body-content" >
        @RenderBody()
    </div>
    <div style="border:2px solid #4cff00;margin-top:50px;"></div>
    <footer style="background-color:#373333;margin-bottom:-50px;">
            <br />
            <p style="color:#808080;margin-left:70px;">ITELYA GmbH & Co. KG, Bahnhofstraße 8, 97500 Ebelsbach</p>
            <p style="color:#439c14;margin-left:70px;">Impressum Datenschutz</p>
            <br />
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
</body>
</html>
